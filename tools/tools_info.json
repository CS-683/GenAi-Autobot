{
  "database_type": "MongoDB",
  "tools": [
    {
      "tool_name": "get_transactions",
      "tool_description": "Retrieves transactions based on filter criteria.",
      "arguments": [
        {
          "argument_name": "filter_criteria",
          "argument_description": "MongoDB filter object to select transactions.",
          "argument_type": "dict",
          "argument_value_example": "{\"storeLocation\": \"New York\"}"
        }
      ]
    },
    {
      "tool_name": "post_transaction",
      "tool_description": "Posts a new transaction to the database.",
      "arguments": [
        {
          "argument_name": "transaction_data",
          "argument_description": "Data of the transaction to be inserted.",
          "argument_type": "dict",
          "argument_value_example": "{\"saleDate\": \"2023-10-01T14:20:00Z\", \"items\": [{\"name\": \"notebook\", \"tags\": [\"office\", \"writing\"], \"price\": 9.99, \"quantity\": 10}, {\"name\": \"pen\", \"tags\": [\"office\", \"writing\"], \"price\": 1.99, \"quantity\": 100}], \"storeLocation\": \"New York\", \"customer\": {\"gender\": \"M\", \"age\": 30, \"email\": \"test@example.com\", \"satisfaction\": 5}, \"couponUsed\": False, \"purchaseMethod\": \"Online\"}"
        }
      ]
    },
    {
      "tool_name": "update_transaction",
      "tool_description": "Updates a specific transaction by its ID.",
      "arguments": [
        {
          "argument_name": "transaction_id",
          "argument_description": "The ID of the transaction to update.",
          "argument_type": "ObjectId",
          "argument_value_example": "transaction_id"
        },
        {
          "argument_name": "update_data",
          "argument_description": "Update operations to be applied.",
          "argument_type": "dict",
          "argument_value_example": "{\"couponUsed\": True}"
        }
      ]
    },
    {
      "tool_name": "delete_transaction",
      "tool_description": "Deletes a transaction by its ID.",
      "arguments": [
        {
          "argument_name": "transaction_id",
          "argument_description": "The ID of the transaction to delete.",
          "argument_type": "ObjectId",
          "argument_value_example": "transaction_id"
        }
      ]
    },
    {
      "tool_name": "sales_summary",
      "tool_description": "Provides a summary of sales grouped by store location.",
      "arguments": []
    },
    {
      "tool_name": "revenue_analysis",
      "tool_description": "Analyzes total revenue by store location.",
      "arguments": []
    },
    {
      "tool_name": "get_customers",
      "tool_description": "Fetches customer data based on filter criteria.",
      "arguments": [
        {
          "argument_name": "filter_criteria",
          "argument_description": "MongoDB filter object to select customers.",
          "argument_type": "dict",
          "argument_value_example": "{\"region\": \"North\"}"
        }
      ]
    },
    {
      "tool_name": "update_customer_info",
      "tool_description": "Updates customer information based on email.",
      "arguments": [
        {
          "argument_name": "customer_email",
          "argument_description": "Email of the customer to update.",
          "argument_type": "str",
          "argument_value_example": "example@example.com"
        },
        {
          "argument_name": "update_data",
          "argument_description": "Update operations to be applied to the customer.",
          "argument_type": "dict",
          "argument_value_example": "{\"phone\": \"1234567890\"}"
        }
      ]
    },
    {
      "tool_name": "customer_purchase_history",
      "tool_description": "Retrieves the purchase history of a customer by email.",
      "arguments": [
        {
          "argument_name": "customer_email",
          "argument_description": "Email of the customer whose purchase history is being queried.",
          "argument_type": "str",
          "argument_value_example": "example@example.com"
        }
      ]
    },
    {
      "tool_name": "get_items",
      "tool_description": "Fetches a list of distinct items sold.",
      "arguments": []
    },
    {
      "tool_name": "update_item",
      "tool_description": "Updates information for a specified item.",
      "arguments": [
        {
          "argument_name": "item_name",
          "argument_description": "Name of the item to update.",
          "argument_type": "str",
          "argument_value_example": "notebook"
        },
        {
          "argument_name": "update_data",
          "argument_description": "Update operations to be applied to the item.",
          "argument_type": "dict",
          "argument_value_example": "{\"price\": 2.99}"
        }
      ]
    },
    {
      "tool_name": "list_stores",
      "tool_description": "Lists all distinct store locations.",
      "arguments": []
    },
    {
      "tool_name": "store_performance",
      "tool_description": "Analyzes the performance of stores including sales and customer satisfaction.",
      "arguments": []
    },
    {
      "tool_name": "apply_coupon",
      "tool_description": "Applies a coupon code to a transaction.",
      "arguments": [
        {
          "argument_name": "transaction_id",
          "argument_description": "ID of the transaction to apply the coupon to.",
          "argument_type": "ObjectId",
          "argument_value_example": "ObjectId('507f191e810c19729de860ea')"
        },
        {
          "argument_name": "coupon_code",
          "argument_description": "Coupon code to apply.",
          "argument_type": "str",
          "argument_value_example": "SAVE10"
        }
      ]
    },
    {
      "tool_name": "create_manage_coupons",
      "tool_description": "Creates and manages coupons.",
      "arguments": [
        {
          "argument_name": "coupon_data",
          "argument_description": "Data of the coupon to be created.",
          "argument_type": "dict",
          "argument_value_example": "{\"code\": \"NEWYEAR\", \"discount\": 0.15}"
        }
      ]
    }
  ]
}
